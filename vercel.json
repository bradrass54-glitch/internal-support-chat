{
  "buildCommand": "pnpm install && pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "vite",
  "outputDirectory": "dist",
  "env": {
    "DATABASE_URL": {
      "description": "MySQL/TiDB database connection string (e.g., mysql://user:password@host:port/database)",
      "required": true
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT session signing (generate with: openssl rand -base64 32)",
      "required": true
    },
    "VITE_APP_ID": {
      "description": "OAuth application ID from your auth provider",
      "required": true
    },
    "OAUTH_SERVER_URL": {
      "description": "OAuth server base URL",
      "required": true
    },
    "VITE_OAUTH_PORTAL_URL": {
      "description": "OAuth login portal URL",
      "required": true
    },
    "OWNER_OPEN_ID": {
      "description": "Owner's OpenID from auth provider",
      "required": true
    },
    "OWNER_NAME": {
      "description": "Owner's display name",
      "required": true
    },
    "BUILT_IN_FORGE_API_URL": {
      "description": "API URL for built-in services (LLM, storage, etc.)",
      "required": false
    },
    "BUILT_IN_FORGE_API_KEY": {
      "description": "API key for built-in services",
      "required": false
    },
    "VITE_FRONTEND_FORGE_API_KEY": {
      "description": "Frontend API key for built-in services",
      "required": false
    },
    "VITE_FRONTEND_FORGE_API_URL": {
      "description": "Frontend API URL for built-in services",
      "required": false
    },
    "VITE_ANALYTICS_ENDPOINT": {
      "description": "Analytics endpoint URL (optional)",
      "required": false
    },
    "VITE_ANALYTICS_WEBSITE_ID": {
      "description": "Analytics website ID (optional)",
      "required": false
    },
    "VITE_APP_TITLE": {
      "description": "Application title displayed in the UI",
      "required": false
    },
    "VITE_APP_LOGO": {
      "description": "Application logo URL",
      "required": false
    }
  },
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": true
  }
}
